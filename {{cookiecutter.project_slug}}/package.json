{
  "name": "{{cookiecutter.project_slug}}",
  "version": "{{cookiecutter.project_version}}",
  "description": "{{cookiecutter.project_short_description}}",
  "main": "src/index.js",
  "scripts": {
    "test": "NODE_ENV=test ./node_modules/.bin/jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "test:ci": "npm run test -- --ci --runInBand",
    "serve": "node dist/bundle.js",
    "build:dev": "BABEL_ENV=development ./node_modules/.bin/webpack --config webpack.config.js --mode development --progress --colors",
    "build:prod": "BABEL_ENV=production ./node_modules/.bin/webpack --mode production"
  },
  "author": "{{cookiecutter.author_name}} <{{cookiecutter.author_email}}>",
  "license": "{{cookiecutter.project_license}}",
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.4",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^2.0.0",
    "jest": "^24.7.1",
    "jest-junit": "^6.3.0",
    "sinon": "^7.2.3",
    "supertest": "^3.4.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env", {
          "targets": {
            "node": "10"
          }
        }
      ]
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.jsx?$",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "node"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ]
  }
}
